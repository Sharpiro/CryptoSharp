<UserControl x:Class="CryptoSharp.Wpf.Controls.InputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoSharp.Wpf.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="250" Background="White">
    <Grid>
        <StackPanel Margin="15">
            <TextBox Name="InputTextBox" Width="150"/>
            <StackPanel Margin="0,15,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="OkButton" Content="Ok" Height="25" Width="50" Click="OkButton_OnClick"/>
                <Button Name="CancelButton" Content="Cancel" Height="25" Width="50" Margin="15,0,0,0" Click="CancelButton_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
